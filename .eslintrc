{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "__DEV__": false,
    "__PROD__": false,
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "arrow-body-style": ["warn", "as-needed", { "requireReturnForObjectLiteral": true }],
    "comma-dangle": ["warn", "only-multiline"],
    "global-require": ["warn"],
    "import/no-unresolved": ["error", { ignore: ['\.img$', '\.png$'] }],
    "max-len": ["warn", 120, 2],
    "new-cap": ["error", { "capIsNewExceptions": [ ] }],
    "no-param-reassign": ["error", { "props": false }],
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "no-underscore-dangle": ["off", { "allowAfterThis": true }],
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "caughtErrors": "none" }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "object-shorthand": ["warn"],
    "padded-blocks": ["error", "never"],
    "prefer-template": ["off"],
    "quote-props": ["error", "consistent-as-needed", { "keywords": true }],
    "react/jsx-boolean-value": ["error", "always"],
    "react/prefer-stateless-function": ["off"],
    "react/forbid-prop-types": ["off"],
    "react/jsx-pascal-case": ["warn", { ignore: [ ] }],
    "react/prop-types": ["warn", { ignore: ["children", "style", "params", "routing", "location", "history", "actions"] }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "jsx-a11y/href-no-hash": ["off"],
  }
}
